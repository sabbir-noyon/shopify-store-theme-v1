{
  "name": "Header 3",
  "settings": [
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "mega_menu_3",
      "label": "Enable Mega menu",
      "default": false
    }
  ]
}
