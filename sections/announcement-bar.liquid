<div class="announcement-bar" 
    style="--announce-bg-color: {{ section.settings.bg_color }};
           --announce-text-color: {{ section.settings.text_color }};
           --announce-font-stack: {% if section.settings.custom_font_family != blank %}
                                    '{{ section.settings.custom_font_family }}'
                                    {% else %}
                                    '{{ section.settings.font_family.family }}', 
                                    {{ section.settings.font_family.fallback_families }}
                                    {% endif %};
           --announce-font-size: {{ section.settings.font_size }}px;
           --announce-font-weight: {{ section.settings.font_weight }};
           --announce-letter-spacing: {{ section.settings.letter_spacing }}px;">
   
    <div class="container">
        <p class="announce-text text-center">{{ section.settings.announce_text }}</p>
    </div>
    <div><p class="text-7xl text-blue-500 text-center">Holla ! </p></div>
    <div><p></p></div>
</div>

{% schema %}
{
    "name":"Announcement Bar",
    "settings": [
        {
            "type": "text",
            "id": "announce_text",
            "label": "Announcement Text",
            "default": "âœ¨Unlock 50% OFF your first order when you subscribe."
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#FFFFFF"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#000000"
        },
        {
            "type": "font_picker",
            "id": "font_family",
            "label": "Font Family",
            "default": "poppins_n4"
        },
        {
            "type": "select",
            "id": "custom_font_family",
            "label": "Custom Fonts",
            "default": "",
            "options": [
                {"value": "", "label": "Use Shopify Default Fonts"},
                {"value": "Afacad, Sans-Serif", "label": "Afacad"},
                {"value": "League Spartan", "label": "League Spartan"},
                {"value": "Figtree", "label": "Figtree"}      
            ]
        },
        {
            "type": "range",
            "id": "font_size",
            "label": "Font Size",
            "min": 12,
            "max": 36,
            "step": 1,
            "default": 20
        },
        {
            "type": "select",
            "id": "font_weight",
            "label": "Font Weight",
            "default": "400",
            "options": [
                { "value": "100", "label": "Thin 100" },
                { "value": "200", "label": "Extra Light 200" },
                { "value": "300", "label": "Light 300" },
                { "value": "400", "label": "Regular 400" },
                { "value": "500", "label": "Medium 500" },
                { "value": "600", "label": "Semi Bold 600" },
                { "value": "700", "label": "Bold 700" },
                { "value": "800", "label": "Extra Bold 800" },
                { "value": "900", "label": "Black 900" }
            ]
        },
        {
            "type": "range",
            "id": "letter_spacing",
            "label": "Letter Spacing",
            "min": 0,
            "max": 5,
            "step": 0.1,
            "default": 1
        }

    ]
} 
{% endschema %} 
